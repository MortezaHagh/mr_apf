{
    "name": "MR-APF",
    "privileged": true,
    "remoteUser": "developer",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "..",
        "args": {
            "USERNAME": "developer",
            "BASE_IMAGE": "osrf/ros:noetic-desktop-full"
        }
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "--privileged",
        // --- Try GPU acceleration if available ---
        "--gpus",
        "all"
    ],
    "mounts": [
        // --- X11 graphics forwarding
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        // --- Fallbacks if no GPU ---
        "source=/dev/dri,target=/dev/dri,type=bind"
    ],
    "workspaceFolder": "/home/dev_ws/src/apf",
    "workspaceMount": "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind",
    "containerEnv": {
        // --- Allow for all host NVIDIA GPU driver capabilities ---
        "NVIDIA_DRIVER_CAPABILITIES": "all",
        "DISPLAY": "${localEnv:DISPLAY}",
        "QT_X11_NO_MITSHM": "1",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42",
        "LIBGL_ALWAYS_SOFTWARE": "0"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // editor
                "eamodio.gitlens",
                "esbenp.prettier-vscode",
                "redhat.vscode-xml",
                // "streetsidesoftware.code-spell-checker",
                // ROS
                "ms-iot.vscode-ros",
                // Cmake
                "twxs.cmake",
                // Python
                "donjayamanne.python-extension-pack",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.autopep8"
                // "ms-python.flake8",
                // // CPP
                // "llvm-vs-code-extensions.vscode-clangd", // âœ… REPLACEMENT for clang-format
                // // Other
                // "emeraldwalk.runonsave"
            ],
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    },
                    "zsh": {
                        "path": "/usr/bin/zsh",
                        "args": [
                            "-l"
                        ]
                    }
                },
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        }
    },
    "postCreateCommand": "sudo chown -R $(whoami) /home/dev_ws/ && cd /home/dev_ws/ && catkin_make "
    // "postCreateCommand": "cd /home/dev_ws && sudo rosdep update  && sudo rosdep install --from-paths src --rosdistro noetic --ignore-src -y && sudo rm -rf /var/lib/apt/lists/* && sudo apt-get clean && sudo chown -R $(whoami) /home/dev_ws/"
}